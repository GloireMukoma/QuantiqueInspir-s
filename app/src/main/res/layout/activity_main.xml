<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center">

    <ImageView
        android:layout_width="245dp"
        android:layout_height="160dp"
        android:layout_marginTop="2dp"
        android:src="@drawable/icon_song" />

    <TextView
        android:textSize="15dp"
        android:textColor="@color/design_default_color_error"
        android:layout_marginTop="8dp"
        android:text="@string/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/croisseulementbtn"
        android:layout_marginTop="5dp"
        android:layout_width="220dp"
        android:layout_height="44dp"
        android:text="Crois Seulement" />
    <Button
        android:id="@+id/hozannabtn"
        android:layout_width="220dp"
        android:layout_height="44dp"
        android:text="@string/hozanna" />
    <Button
        android:id="@+id/autrecantiqbtn"
        android:layout_width="220dp"
        android:layout_height="44dp"
        android:text="@string/autreqtique" />

    <TextView
        android:textSize="12dp"
        android:text="Dévéloppé par Gloire Mukoma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

</LinearLayout>